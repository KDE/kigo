    <term><menuchoice>
    <shortcut><keycombo action="simul">&Ctrl;&Shift;<keycap>Z</keycap></keycombo></shortcut>
    <guimenu>Move</guimenu> <guimenuitem>Redo</guimenuitem>
    </menuchoice></term>
