    <term><menuchoice>
    <shortcut><keycombo action="simul">&Ctrl;<keycap>Z</keycap></keycombo></shortcut>
    <guimenu>Move</guimenu> <guimenuitem>Undo</guimenuitem>
    </menuchoice></term>
    <listitem><para><action>Undo</action> your last move.</para></listitem>
    </varlistentry>

